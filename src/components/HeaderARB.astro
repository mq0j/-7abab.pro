---
import removeTrailingSlash from "@/utils/removeTrailingSlash";
import presentation from "@/data/presentationARB";

const pathname = removeTrailingSlash(Astro.url.pathname);
---
<style>
  @import url('https://fonts.googleapis.com/css2?family=Cairo:wght@500;700&family=Quicksand:wght@300&family=Tajawal&display=swap');
 *{
  font-family: 'Cairo', sans-serif;
        font-family: 'Quicksand', sans-serif;
        font-family: 'Tajawal', sans-serif;
 }
 </style>
<header class="z-40 flex w-full flex-col gap-2 md:flex-row md:justify-between">

  <nav role="navigation">
    <ul role="list" class="flex flex-row gap-2">
      <li>
        <a
          href="/ARB"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/ARB",
          }}>الرئيسية</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/postsARB"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/postsARB",
          }}>المنشورات</a
        >
      </li>
      <li>/</li>
      <li>
        <a
          href="/"
          class:list={{
            ["hover:text-neutral-100"]: true,
            ["text-neutral-100"]: pathname === "/",
          }}>EN</a
        >
      </li>
    </ul>
  </nav>
</header>
